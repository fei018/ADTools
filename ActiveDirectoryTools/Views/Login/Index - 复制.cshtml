@model List<DomainInfo>
@{
    Layout = null;
}

<!doctype html>
<html class="x-admin-sm">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />   
    <link href="~/adtools/login/font.css" rel="stylesheet" />
    <link href="~/adtools/login/login.css" rel="stylesheet">
    <link href="~/adtools/login/xadmin.css" rel="stylesheet">
    <link href="~/layui/css/layui.css" rel="stylesheet" media="all" />
    <!--[if lt IE 9]>
      <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
      <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-bg">
    <div class="login layui-anim layui-anim-up">
        <div class="message">ADTools Login</div>
        <div id="darkbannerwrap"></div>

        <form method="post" class="layui-form layui-form-pane" action="/login/dologin"> 
            <div class="layui-form-item" pane>
                <label class="layui-form-label" style="text-align:center;">Domain</label>
                <div class="layui-input-block">
                    <select name="domainName" lay-verify="required">
                        @if (Model != null)
                        {
                            <option value="" selected>domain option</option>
                            foreach (var d in Model)
                            {
                                <option value="@d.DomainName">@d.DomainName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <hr class="hr15" />
            <input name="username" placeholder="Login Name" type="text" lay-verify="required" lay-reqText="Required" class="layui-input">
            <hr class="hr15">
            <input name="password" lay-verify="required" placeholder="Password" type="password" lay-reqText="Required" class="layui-input">
            <hr class="hr15">
            <input value="Login" lay-submit lay-filter="login" style="width:100%;" type="submit">
            <hr class="hr20">
            @Html.AntiForgeryToken()
        </form>
        <hr />
        @if (ViewData["LoginError"] != null)
        {
            <div>
                <p style="color:red">@ViewData["LoginError"]</p>
            </div>
        }
    </div>

    <!-- 底部结束 -->
    <script src="~/layui/layui.all.js" charset="utf-8"></script>
    <script src="~/adtools/jquery.min.js"></script>
    @*<script src="~/adtools/datatables/dt-1.10.23/datatables.min.js"></script>
    <script src="~/adtools/custom.js"></script>*@
</body>
</html>